<?php

$sql_host = $_ENV["MYSQL_HOST"];
$sql_user = $_ENV["MYSQL_USER"]; //do not use your adm user, use wrt

$sql_password = $_ENV["MYSQL_PASSWORD"];

$link = mysql_connect($sql_host, $sql_user, $sql_password);
if(!$link) {
   die('Could not connect: '. mysql_error());
}

$dbName = $_ENV["MYSQL_DATABASE"]; //name of database to use

$db_selected = mysql_select_db($dbName,$link);

if(!$db_selected){
   die('Can\'t use {$dbName} : '. mysql_error());
}

?>
